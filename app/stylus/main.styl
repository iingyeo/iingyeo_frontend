@import 'normalize'
@import 'helper'

/* variables */
$lightgrey = #999
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7
$color1 = #449dd1

html
button
input
select
textarea 
  color: $black

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)
  
body
  color: $black
  font-size: 1em
  line-height: 1.5
  
header
  background: $grey
  color:$black
  padding: 1em
  
  nav
    float:right
    user-select:none
    
  .nav-item
    float:left
    margin-left:.5em
    
    a.active
      text-decoration:underline
    
.content
  padding: 1em

.text-left
  text-align: left !important

.register-form
  display: inline-block
  max-width: 195px
  input
    width: 100%

.md-modal
  position: fixed
  top: 50%
  left: 50%
  width: 300px
  height: auto
  z-index: 2000
  visibility: hidden
  backface-visibility: hidden
  transform: translateX(-50%) translateY(-50%)
  background: #fff
  .md-show &
    visibility: visible;

.md-overlay
  z-index: 1000
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  visibility: hidden
  opacity: 0
  background: rgba($color1, 0.8)
  transition: all 0.3s
  text-align: center
  &.md-show
    opacity: 1
    visibility: visible

